<p id="notice"><%= notice %></p>

<h1>Styles</h1>
<p>Number of styles: <%= @styles.count %></p>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Beers</th>
      <th></th>
    </tr>
  <tbody>
    <% @styles.each do |style| %>
      <tr>
        <td><%= link_to style.name, style %></td>
        <td><%= style.beers.count %></td>
        <% if current_user %>
          <td><%= link_to 'Edit', edit_style_path(style), class:"label label-info" %></td>
          <% if current_user.admin %>
            <td><%= link_to 'Destroy', style, method: :delete, data: { confirm: 'Are you sure?' }, class:"label label-warning" %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Style', new_style_path, class:"btn btn-info" %>
<%= link_to 'List of breweries', breweries_path, class:"btn btn-info" %>
<%= link_to 'List of beers', beers_path, class:"btn btn-info" %>

