<h1>Users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th>Favorite beer</th>
<!--      <th>Rated beers</th> -->
      <th>Total ratings</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td>
        <% if user.favorite_beer %>
          <%= link_to user.favorite_beer, user.favorite_beer %>
        <% end %>
        </td>
<!--        <td><%= user.beers.size %></td> -->
        <td><%= user.ratings.size %></td>
        <td>
        <% if user.admin %>
          <span class="label label-info">Administrator</span>
        <% end %>
        <% if user.banned %>
          <span class="label label-warning">Banned</span>
        <% end %>
        <% if current_user %>
          <% if user == current_user %>
            <span class="label label-default">Current user</span>
          <% end %>
        <% end %>
        </td>
<!--        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class:"btn btn-info"  unless current_user %>
