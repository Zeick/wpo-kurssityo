<p id="notice"><%= notice %></p>

<h1>Memberships</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Beer club</th>
      <th>User</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @memberships.each do |membership| %>
      <tr>
        <td><%= link_to membership.beer_club, membership.beer_club %></td>
        <td><%= link_to membership.user, membership.user %></td>
        <td>
          <!-- <%= link_to 'Show', membership, class:"label label-info" %> 
                    <%= link_to 'Edit', edit_membership_path(membership), class:"label label-warning" %>

          -->
          <% if current_user %>
            <% if current_user.admin && @user != current_user %>

          <%= link_to 'End membership', membership, method: :delete, data: { confirm: 'Are you sure?' } , class:"label label-danger"%>
          <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Membership', new_membership_path, class:"btn btn-info" %>
